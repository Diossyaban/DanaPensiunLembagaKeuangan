@{
    ViewData["Title"] = "DPLK | Perta Life";
    Layout = "~/Views/Shared/_NewLayout.cshtml";
}

@{
    var loginSuccessMessage = Context.Request.Cookies["LoginSuccessMessage"];
    if (!string.IsNullOrEmpty(loginSuccessMessage))
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <strong>Success!</strong> @loginSuccessMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
        Context.Response.Cookies.Delete("LoginSuccessMessage");
    }
    else if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
    }
}
