@model DPLK.ModelAcc.SpdInvestBank

@{
    ViewData["Title"] = "DPLK | Perta Life";
    Layout = "~/Views/Shared/DPLK_Layout.cshtml";
}

<div class="container-xxl flex-grow-1 container-p-y">
    <div class="card my-4">
        <div class="card-body">
            <h2 class="fw-bold">Delete Confirmation</h2>
            <p class="lead">Are you sure you want to delete this company?</p>

            <form method="post" action="@Url.Action("DeleteBank", "CashManagement", new { id = ViewBag.Code })" class="d-inline">
                <button type="submit" class="btn btn-danger">Yes, Delete</button>
            </form>


            <a href="@Url.Action("BankList", "Pension")" class="btn btn-secondary">Cancel</a>
        </div>
    </div>
</div>

