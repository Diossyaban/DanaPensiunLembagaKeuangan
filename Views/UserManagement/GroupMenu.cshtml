@model X.PagedList.IPagedList<DPLK.Models.TGroupMenu>
@using X.PagedList.Mvc.Core
@using X.PagedList.Web.Common;

<link href="~/css/PagedList.css" rel="stylesheet" type="text/css" />
@{
    ViewData["Title"] = "DPLK | Perta Life";
    Layout = "~/Views/Shared/DPLK_Layout.cshtml";
}


<div class="container-fluid px-4">
    <div class="card my-4">
        <div class="card-header">
            <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light"> Group Menu  /</span>  List</h4>
            <div class="row mt-3">
                <div class="col-md-6">
                    <form asp-action="GroupMenu" method="get">
                        <div class="input-group mb-3">
                            <input type="text" name="searchString" class="form-control" placeholder="Search...">
                            <button class="btn btn-outline-secondary" type="submit">Search</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive text-nowrap">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th></th>
                            <th>ID Group</th>
                            <th>Nama Group</th>
                            <th>Urutan</th>
                            <th>Status Group</th>
                            <th>Prefix</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model)
                        {
                            <tr>
                                <td>
                                    <div class="dropdown">
                                        <button type="button"
                                                class="btn p-0 dropdown-toggle hide-arrow"
                                                data-bs-toggle="dropdown">
                                            <i class="bx bx-dots-vertical-rounded"></i>
                                        </button>
                                        <div class="dropdown-menu">
                                            <a class="dropdown-item" asp-action="" asp-route-id="@user.IdGroup"><i class="bx bx-edit-alt me-1"></i>Edit</a>
                                        </div>
                                    </div>

                                </td>
                                <td>@user.IdGroup</td>
                                <td>@user.NamaGroup</td>
                                <td>@user.Urutan</td>
                                <td>@user.StatusGroup</td>
                                <td>@user.Prefix</td>
           


                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="d-flex justify-content-center">
                Page @(Model.PageNumber) of @Model.PageCount
                @Html.PagedListPager(Model, page => Url.Action("GroupMenu", new { page, currentFilter = ViewBag.CurrentFilter }), PagedListRenderOptions.TwitterBootstrapPager)
            </div>
        </div>
    </div>
</div>
