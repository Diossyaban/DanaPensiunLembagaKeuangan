@model DPLK.Models.TUser

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/DPLK_Layout.cshtml";
}

<div class="container-xxl flex-grow-1 container-p-y">
    <div class="card my-4">
        <div class="card-body">
            <h2 class="fw-bold">Delete Confirmation</h2>
            <p class="lead">Are you sure you want to delete this user?</p>

            <form method="post" action="@Url.Action("DeleteConfirmed", "UserManagement", new { id = Model.IdUser })" class="d-inline">
                @Html.AntiForgeryToken()
                <button type="submit" class="btn btn-danger">Yes, Delete</button>
            </form>

            <a href="@Url.Action("UserList", "UserManagement")" class="btn btn-secondary">Cancel</a>
        </div>
    </div>
</div>
