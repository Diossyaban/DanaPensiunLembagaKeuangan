@model X.PagedList.IPagedList<DPLK.Models.TaddressType>
@using X.PagedList.Mvc.Core

<link href="~/css/PagedList.css" rel="stylesheet" type="text/css" />
@{
    ViewData["Title"] = "DPLK | Perta Life";
    Layout = "~/Views/Shared/DPLK_Layout.cshtml";
}

<div class="container-xxl flex-grow-1 container-p-y">
    @if (!string.IsNullOrEmpty(TempData["SuccessMessage"] as string))
    {
        <div class="alert alert-success" role="alert">
            @TempData["SuccessMessage"]
        </div>
    }
    <div class="table-responsive text-nowrap">
        <div class="card-header">
            <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Pension /</span> Parameter Maker - Address Type</h4>
            <a class="btn btn-primary text-end" asp-action="ParameterMakerAddressTypeCreate"><span class="tf-icons bx bx-book-add"></span>&nbsp; Create New</a>

            <div class="row mt-3">
                <div class="col-md-6">
                    <form asp-action="ParameterApprovalAddressTypeIndex" method="get">
                        <div class="input-group mb-3">
                            <input type="text" name="searchString" class="form-control" placeholder="Search...">
                            <button class="btn btn-outline-secondary" type="submit">Search</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="card-body">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>
                            <a asp-action="ParameterApprovalAddressTypeIndex" asp-route-sortOrder="@ViewBag.AddrTypeNmbrSortParam" asp-route-page="1">ID</a>
                        </th>
                        <th>
                            <a asp-action="ParameterApprovalAddressTypeIndex" asp-route-sortOrder="@ViewBag.AddrTypeNmSortParam" asp-route-page="1">Description</a>
                        </th>
                        <th>
                            <a asp-action="ParameterApprovalAddressTypeIndex" asp-route-sortOrder="@ViewBag.OldTypeNmbrSortParam" asp-route-page="1">Old ID</a>
                        </th>
                        <th>
                            <a asp-action="ParameterApprovalAddressTypeIndex" asp-route-sortOrder="@ViewBag.LastChangeDtSortParam" asp-route-page="1">Last Change Date</a>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var addressType in Model)
                    {
                        <tr>
                            <td>@addressType.AddrTypeNmbr</td>
                            <td>@addressType.AddrTypeNm</td>
                            <td>@addressType.OldTypeNmbr</td>
                            <td>@addressType.LastChangeDt</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
