@model DPLK.Models.SuspnStatusType

@{
    ViewData["Title"] = "DPLK | Perta Life";
    Layout = "~/Views/Shared/DPLK_Layout.cshtml";
}

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Pension /</span> Create New Suspense Status Type</h4>

    <form asp-action="ParameterMakerSuspenseStatusTypeCreate" method="post">
        <div class="form-group">
            <label for="SuspnStatusNmbr">ID:</label>
            <input type="text" class="form-control" id="SuspnStatusNmbr" name="SuspnStatusNmbr" required>
        </div>
        <div class="form-group">
            <label for="SuspnStatusNm">Description:</label>
            <input type="text" class="form-control" id="SuspnStatusNm" name="SuspnStatusNm" required>
        </div>
        <div class="form-group">
            <label for="OldTypeNmbr">Old ID:</label>
            <input type="text" class="form-control" id="OldTypeNmbr" name="OldTypeNmbr">
        </div>
        <div class="form-group">
            <label for="LastChangeDt">Last Change Date:</label>
            <input type="datetime-local" class="form-control" id="LastChangeDt" name="LastChangeDt">
        </div>
        <button type="submit" class="btn btn-primary">Create</button>
        <a asp-action="ParameterMakerSuspenseStatusType" class="btn btn-secondary">Back to List</a>
    </form>
</div>
