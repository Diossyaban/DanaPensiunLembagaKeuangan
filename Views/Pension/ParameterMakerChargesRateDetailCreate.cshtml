@model DPLK.Models.RateTableDetail

<link href="~/css/PagedList.css" rel="stylesheet" type="text/css" />
@{
    ViewData["Title"] = "DPLK | Perta Life";
    Layout = "~/Views/Shared/DPLK_Layout.cshtml";
}

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Pension /</span> Create New Charges Rate Detail</h4>

    <form asp-action="ParameterMakerChargesRateDetailCreate" method="post">
        <div class="form-group">
            <label for="RateTypeNmbr">ID:</label>
            <input type="text" class="form-control" id="RateTypeNmbr" name="RateTypeNmbr" required>
        </div>
        <div class="form-group">
            <label for="RateSeqNmbr">SEQ:</label>
            <input type="text" class="form-control" id="RateSeqNmbr" name="RateSeqNmbr" required>
        </div>
        <div class="form-group">
            <label for="StartAmt">FROM:</label>
            <input type="text" class="form-control" id="StartAmt" name="StartAmt" required>
        </div>
        <div class="form-group">
            <label for="EndAmt">TO:</label>
            <input type="text" class="form-control" id="EndAmt" name="EndAmt" required>
        </div>
        <div class="form-group">
            <label for="RatePct">RATE PCT:</label>
            <input type="text" class="form-control" id="RatePct" name="RatePct" required>
        </div>
        <div class="form-group">
            <label for="RateAmt">RATE AMT:</label>
            <input type="text" class="form-control" id="RateAmt" name="RateAmt" required>
        </div>
        <div class="form-group">
            <label for="LastChangeDt">Last Change Date:</label>
            <input type="datetime-local" class="form-control" id="LastChangeDt" name="LastChangeDt" required>
        </div>
        <button type="submit" class="btn btn-primary">Create</button>
        <a asp-action="ParameterMakerChargesRateDetail" class="btn btn-secondary">Back to List</a>
    </form>
</div>
