@model DPLK.Models.AppStatusType

@{
    ViewData["Title"] = "DPLK | Perta Life";
    Layout = "~/Views/Shared/DPLK_Layout.cshtml";
}
@if (!string.IsNullOrEmpty(TempData["SuccessMessage"] as string))
{
    <div class="alert alert-success" role="alert">
        @TempData["SuccessMessage"]
    </div>
}
<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Pension /</span> Create New App Status Type</h4>

    <form asp-action="ParameterMakerAppStatusTypeCreate" method="post">
        <div class="form-group">
            <label for="AppStatusNmbr">ID:</label>
            <input type="number" class="form-control" id="AppStatusNmbr" name="AppStatusNmbr" required>
        </div>
        <div class="form-group">
            <label for="AppStatusNm">Description:</label>
            <input type="text" class="form-control" id="AppStatusNm" name="AppStatusNm" required>
        </div>
        <div class="form-group">
            <label for="OldTypeNmbr">Old Status Number:</label>
            <input type="text" class="form-control" id="OldTypeNmbr" name="OldTypeNmbr">
        </div>
        <div class="form-group">
            <label for="LastChangeDt">Last Change Date:</label>
            <input type="datetime-local" class="form-control" id="LastChangeDt" name="LastChangeDt">
        </div>
        <button type="submit" class="btn btn-primary">Create</button>
        <a asp-action="ParameterMakerAppStatusTypeIndex" class="btn btn-secondary">Back to List</a>
    </form>
</div>
