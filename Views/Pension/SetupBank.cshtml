@model DPLK.Models.DbBank

@{
    ViewData["Title"] = "Setup Bank";
    Layout = "~/Views/Shared/DPLK_Layout.cshtml";
}

<h2>Setup Bank</h2>
@if (!string.IsNullOrEmpty(TempData["SuccessMessage"] as string))
{
    <div class="alert alert-success" role="alert">
        @TempData["SuccessMessage"]
    </div>
}
<form asp-action="SetupBank">


    <div class="mb-3 row">
        <label asp-for="BankNmbr" class="col-md-2 col-form-label">Bank Code</label>
        <div class="col-md-4">
            <input asp-for="BankNmbr" class="form-control" />
            <span asp-validation-for="BankNmbr" class="text-danger"></span>
        </div>
    </div>
    <div class="mb-3 row">
        <label asp-for="BankNm" class="col-md-2 col-form-label">Bank Name</label>
        <div class="col-md-4">
            <input asp-for="BankNm" class="form-control" />
            <span asp-validation-for="BankNm" class="text-danger"></span>
        </div>
    </div>
    <div class="mb-3 row">
        <label asp-for="BankAddr" class="col-md-2 col-form-label">Bank Address</label>
        <div class="col-md-4">
            <input asp-for="BankAddr" class="form-control" />
            <span asp-validation-for="BankAddr" class="text-danger"></span>
        </div>
    </div>
 

    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>
