                <span asp-validation-for="AgentNumber" class="text-danger"></span>
            </div>
            <label asp-for="StatusEffectiveDate" class="col-md-2 col-form-label">Status Effective Date </label>
            <div class="col-md-4">
                <input asp-for="StatusEffectiveDate" class="form-control" type="date" />
                <span asp-validation-for="StatusEffectiveDate" class="text-danger"></span>
            </div>
        </div>


        <div class="mb-3 row">
            <label asp-for="CommissionTypeNumber" class="col-md-2 col-form-label">Jenis Komisi </label>
            <div class="col-md-4">
