@model DPLK.Models.CertificateInfo


<form asp-action="CertificateInfo" method="post">

    <div class="card-body">
        <div class="mb-3 row">
            <label asp-for="CertificateNumber" class="col-md-2 col-form-label">Certificate Code</label>
            <div class="col-md-4">
                <input asp-for="CertificateNumber" class="form-control" />
                <span asp-validation-for="CertificateNumber" class="text-danger"></span>
            </div>
            <label asp-for="FundSourceNumber" class="col-md-2 col-form-label">Fund Source</label>
            <div class="col-md-4">
                @Html.DropDownListFor(model => model.FundSourceNumber, (IEnumerable<SelectListItem>)ViewData["DdlParamsMnySrc"], new { @class = "form-select" })
                <span asp-validation-for="FundSourceNumber" class="text-danger"></span>
            </div>
        </div>
        <div class="mb-3 row">
            <label asp-for="OldCertificateNumber" class="col-md-2 col-form-label">Old Cert. Code</label>
            <div class="col-md-4">
                <input asp-for="OldCertificateNumber" class="form-control" />
                <span asp-validation-for="OldCertificateNumber" class="text-danger"></span>
            </div>
            <label asp-for="ApplicationReceiveDate" class="col-md-2 col-form-label">Application Received </label>
            <div class="col-md-4">
                <input asp-for="ApplicationReceiveDate" class="form-control" type="date" />
                <span asp-validation-for="ApplicationReceiveDate" class="text-danger"></span>
            </div>
        </div>
        <div class="mb-3 row">
            <label asp-for="GroupNumber" class="col-md-2 col-form-label">Group</label>
            <div class="col-md-4">
                @Html.DropDownListFor(model => model.GroupNumber, ViewBag.GroupList as SelectList, new { @class = "form-control" })
                <span asp-validation-for="GroupNumber" class="text-danger"></span>
            </div>
            <label asp-for="CompletionDate" class="col-md-2 col-form-label">Application Completed </label>
            <div class="col-md-4">
                <input asp-for="CompletionDate" class="form-control" type="date" />
                <span asp-validation-for="CompletionDate" class="text-danger"></span>
            </div>
        </div>
        <div class="mb-3 row">
            <label asp-for="EmployeeNumber" class="col-md-2 col-form-label">Employee Code</label>
            <div class="col-md-4">
                <input asp-for="EmployeeNumber" class="form-control" />
                <span asp-validation-for="EmployeeNumber" class="text-danger"></span>
            </div>
            <label asp-for="EffectiveDate" class="col-md-2 col-form-label"> Create Date </label>
            <div class="col-md-4">
                <input asp-for="EffectiveDate" class="form-control" type="date" />
                <span asp-validation-for="EffectiveDate" class="text-danger"></span>
            </div>
        </div>

        <div class="mb-3 row">
            <label asp-for="EmploymentDate" class="col-md-2 col-form-label">Employment Date</label>
            <div class="col-md-4">
                <input asp-for="EmploymentDate" class="form-control" type="date" />
                <span asp-validation-for="EmploymentDate" class="text-danger"></span>
            </div>
            <label asp-for="TerminationDate" class="col-md-2 col-form-label"> Termination Date </label>
            <div class="col-md-4">
                <input asp-for="TerminationDate" class="form-control" type="date" />
                <span asp-validation-for="TerminationDate" class="text-danger"></span>
            </div>
        </div>

        <div class="mb-3 row">
            <label asp-for="RetirementAge" class="col-md-2 col-form-label">Retirement Age </label>
            <div class="col-md-4">
                <input asp-for="RetirementAge" class="form-control" />
                <span asp-validation-for="RetirementAge" class="text-danger"></span>
            </div>
            <label asp-for="KitDeliveryDate" class="col-md-2 col-form-label"> Certificate Delivery Date </label>
            <div class="col-md-4">
                <input asp-for="KitDeliveryDate" class="form-control" type="date" />
                <span asp-validation-for="KitDeliveryDate" class="text-danger"></span>
            </div>
        </div>
        <div class="mb-3 row">
            <label asp-for="PaymentTypeNumber" class="col-md-2 col-form-label">Payment Method </label>
            <div class="col-md-4">
                @Html.DropDownListFor(model => model.PaymentTypeNumber, (IEnumerable<SelectListItem>)ViewData["DdlParamsPaymentType"], new { @class = "form-select" })
                <span asp-validation-for="PaymentTypeNumber" class="text-danger"></span>
            </div>
            <label asp-for="FirstPremiumFlag" class="col-md-2 col-form-label">First Premium Paid</label>
            <div class="col-md-4">
                <select asp-for="FirstPremiumFlag" class="form-select">
                    <option value="1">Yes</option>
                    <option value="0">No</option>
                </select>
                <span asp-validation-for="FirstPremiumFlag" class="text-danger"></span>
            </div>
        </div>
        <div class="mb-3 row">
            <label asp-for="CitizenshipCode" class="col-md-2 col-form-label">Citizenship </label>
            <div class="col-md-4">
