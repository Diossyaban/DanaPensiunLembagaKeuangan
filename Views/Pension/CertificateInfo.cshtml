            </div>
            <label asp-for="SalaryEffectiveDate" class="col-md-2 col-form-label">Salary Effective Date </label>
            <div class="col-md-4">
                <input asp-for="SalaryEffectiveDate" class="form-control" type="date" />
                <span asp-validation-for="SalaryEffectiveDate" class="text-danger"></span>
            </div>
        </div>
        <div class="mb-3 row">
            <label asp-for="PlanTypeNumber" class="col-md-2 col-form-label">Member Class Plan </label>
            <div class="col-md-4">
                <span asp-validation-for="PlanTypeNumber" class="text-danger"></span>
            </div>
            <label asp-for="SalaryAmount" class="col-md-2 col-form-label">Salary Amount </label>
            <div class="col-md-4">
                <input asp-for="SalaryAmount" class="form-control" />
                <span asp-validation-for="SalaryAmount" class="text-danger"></span>
            </div>
        </div>
        <div class="mb-3 row">
            <label asp-for="PlanTypeNumber" class="col-md-2 col-form-label">Virtual Account Number  </label>
            <div class="col-md-4">
                <span asp-validation-for="PlanTypeNumber" class="text-danger"></span>
            </div>
            <label asp-for="Branch" class="col-md-2 col-form-label">Branch  </label>
            <div class="col-md-4">
                <input asp-for="Branch" class="form-control" />
                <span asp-validation-for="Branch" class="text-danger"></span>
            </div>
        </div>
        <div class="mb-3 row">
            <label asp="" class="col-md-2 col-form-label text-center"> </label>
            <div class="col-md-4">
            </div>
            <label asp-for="ApuPpt" class="col-md-2 col-form-label">APU PPT</label>
            <div class="col-md-4">
                <select asp-for="ApuPpt" class="form-select">
                    <option value="1">Yes</option>
                    <option value="0">No</option>
                </select>
                <span asp-validation-for="ApuPpt" class="text-danger"></span>
            </div>
        </div>
    </div>
