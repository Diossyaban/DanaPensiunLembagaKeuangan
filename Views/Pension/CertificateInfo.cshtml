            <div class="col-md-4">
                <input asp-for="SumInsuredEffectiveDate" class="form-control" type="date" />
                <span asp-validation-for="SumInsuredEffectiveDate" class="text-danger"></span>
            </div>
        </div>
        <div class="mb-3 row">
            <label asp-for="PremiumTypeNumber" class="col-md-2 col-form-label">Jenis Premi </label>
            <div class="col-md-4">
                @Html.DropDownListFor(model => model.PremiumTypeNumber, (IEnumerable<SelectListItem>)ViewData["DdlParamsPremiumType"], new { @class = "form-select" })
                <span asp-validation-for="PremiumTypeNumber" class="text-danger"></span>
            </div>


        </div>
        <div class="mb-3 row">
