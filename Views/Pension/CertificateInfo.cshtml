                <span asp-validation-for="StatusTypeName" class="text-danger"></span>
            </div>

        </div>
        <div class="mb-3 row">
            <label asp-for="AgentNumber" class="col-md-2 col-form-label">Nama Agen </label>
            <div class="col-md-4">
