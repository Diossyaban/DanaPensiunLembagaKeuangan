            <div class="col-md-4">
                @Html.DropDownListFor(model => model.RiderTypeNumber, (IEnumerable<SelectListItem>)ViewData["DdlParamsRiderType"], new { @class = "form-select" })
                <span asp-validation-for="RiderTypeNumber" class="text-danger"></span>
            </div>
            <label asp-for="StatusTypeName" class="col-md-2 col-form-label"> Status </label>
            <div class="col-md-4">
