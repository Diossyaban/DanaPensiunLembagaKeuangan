            <div class="col-md-4">
                <select asp-for="OtherDPPKFlag" class="form-select">
                    <option value="1">Yes</option>
                    <option value="0">No</option>
                </select>
                <span asp-validation-for="OtherDPPKFlag" class="text-danger"></span>
            </div>
        </div>
        <div class="mb-3 row">
            <label asp-for="TaxIdNumber" class="col-md-2 col-form-label">Tax ID </label>
            <div class="col-md-4">
