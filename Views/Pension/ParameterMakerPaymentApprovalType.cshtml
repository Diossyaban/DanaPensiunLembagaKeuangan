@model X.PagedList.IPagedList<DPLK.Models.PaymentApprvType>
@using X.PagedList.Mvc.Core

<link href="~/css/PagedList.css" rel="stylesheet" type="text/css" />
@{
    ViewData["Title"] = "DPLK | Perta Life";
    Layout = "~/Views/Shared/DPLK_Layout.cshtml";
}

<div class="container-xxl flex-grow-1 container-p-y">
    <div class="table-responsive text-nowrap">
        <div class="card-header">
            <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Pension /</span> Parameter Maker - Payment Approval Type</h4>

            <a class="btn btn-primary text-end" asp-action="ParameterMakerPaymentApprovalTypeCreate"><span class="tf-icons bx bx-book-add"></span>&nbsp; Create New</a>
            @if (!string.IsNullOrEmpty(TempData["SuccessMessage"] as string))
            {
                <div class="alert alert-success" role="alert">
                    @TempData["SuccessMessage"]
                </div>
            }
            <div class="row mt-3">
                <div class="col-md-6">
                    <form asp-action="ParameterMakerPaymentApprovalType" method="get">
                        <div class="input-group mb-3">
                            <input type="text" name="searchString" class="form-control" placeholder="Search...">
                            <button class="btn btn-outline-secondary" type="submit">Search</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="card-body">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>
                            <a asp-action="ParameterMakerPaymentApprovalType" asp-route-sortOrder="PaymentTypeNmbr" asp-route-page="1">ID</a>
                        </th>
                        <th>
                            <a asp-action="ParameterMakerPaymentApprovalType" asp-route-sortOrder="PaymentNm" asp-route-page="1">Desciption</a>
                        </th>

                        <th>
                            <a asp-action="ParameterMakerPaymentApprovalType" asp-route-sortOrder="OldTypeNm" asp-route-page="1">Old ID</a>
                        </th>
                        <th>
                            <a asp-action="ParameterMakerPaymentApprovalType" asp-route-sortOrder="LastChangeDt" asp-route-page="1">Last Change Date</a>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var invType in Model)
                    {
                        <tr>
                            <td>@invType.PaymentApprvNmbr</td>
                            <td>@invType.PaymentApprvNm</td>
                            <td>@invType.OldTypeNmbr</td>
                            <td>@invType.LastChangeDt</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div class="text-center mt-4">
        @Html.PagedListPager(Model, page => Url.Action("ParameterMakerPaymentApprovalType", new { page, currentFilter = ViewBag.CurrentFilter, sortOrder = ViewBag.CurrentSort }))
    </div>
</div>
