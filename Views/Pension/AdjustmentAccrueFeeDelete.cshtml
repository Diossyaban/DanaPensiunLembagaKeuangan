@model DPLK.Models.CycleCertificateChargeAdjustment

@{
    ViewData["Title"] = "Delete Adjustment Accrue Fee";
    Layout = "~/Views/Shared/DPLK_Layout.cshtml";
}

<h1>Delete Adjustment Accrue Fee</h1>

<div class="container-xxl flex-grow-1 container-p-y">
    <div class="card my-4">
        <div class="card-body">
            <h2 class="fw-bold">Delete Confirmation</h2>
            <p class="lead">Are you sure you want to delete this ?</p>

            <form method="post" action="@Url.Action("AdjustmentAccrueFeeConfirmDelete", "Pension", new { id = ViewBag.InvTypeNmbr })" class="d-inline">
                <button type="submit" class="btn btn-danger">Yes, Delete</button>
            </form>

            <a href="@Url.Action("AdjustmentAccrueFee", "Pension")" class="btn btn-secondary">Cancel</a>
        </div>
    </div>
</div>
