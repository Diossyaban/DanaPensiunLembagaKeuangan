@model DPLK.Models.Company

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/DPLK_Layout.cshtml";
}

<div class="container-xxl flex-grow-1 container-p-y">
    <div class="card my-4">
        <div class="card-body">
            <h2 class="fw-bold">Delete Confirmation</h2>
            <p class="lead">Are you sure you want to delete this company?</p>

            <form method="post" action="@Url.Action("NewBussinesCompanyDelete", "Pension", new { id = ViewBag.ClientNmbr })" class="d-inline">
                <button type="submit" class="btn btn-danger">Yes, Delete</button>
            </form>

            <a href="@Url.Action("NewBussinesCompany", "Pension")" class="btn btn-secondary">Cancel</a>
        </div>
    </div>
</div>
