@model X.PagedList.IPagedList<DPLK.Models.VaGroup>
@using X.PagedList.Mvc.Core

<link href="~/css/PagedList.css" rel="stylesheet" type="text/css" />
@{
    ViewData["Title"] = "DPLK | Perta Life";
    Layout = "~/Views/Shared/DPLK_Layout.cshtml";
}

<div class="container-xxl flex-grow-1 container-p-y">
    <div class="table-responsive text-nowrap">
        <div class="card-header">
            <h1>Virtual Account</h1>
            <a class="btn btn-primary text-end" asp-action="CreateVaGroup"><span class="tf-icons bx bx-book-add"></span>&nbsp; Create New</a>

            <div class="row mt-3">
                <div class="col-md-6">
                    <form asp-action="VirtualAccount" method="get">
                        <div class="input-group mb-3">
                            <input type="text" name="searchString" class="form-control" placeholder="Search...">
                            <button class="btn btn-outline-secondary" type="submit">Search</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="card-body">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>
                            <a asp-action="VirtualAccount" asp-route-sortOrder="VaAccnNmbr" asp-route-page="1">Virtual Account Number</a>
                        </th>
                        <th>
                            <a asp-action="VirtualAccount" asp-route-sortOrder="GroupNmbr" asp-route-page="1">Group Number</a>
                        </th>
                        <th>
                            <a asp-action="VirtualAccount" asp-route-sortOrder="CompanyNm" asp-route-page="1">Company Name</a>
                        </th>
                        <th>
                            <a asp-action="VirtualAccount" asp-route-sortOrder="ActiveDt" asp-route-page="1">Active Date</a>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var vaGroup in Model)
                    {
                        <tr>
                            <td>@vaGroup.VaAccnNmbr</td>
                            <td>@vaGroup.GroupNmbr</td>
                            <td>@vaGroup.CompanyNm</td>
                            <td>@vaGroup.ActiveDt</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
  
    <div class="text-center mt-4">
        @Html.PagedListPager(Model, page => Url.Action("VirtualAccount", new { page, currentFilter = ViewBag.CurrentFilter, sortOrder = ViewBag.CurrentSort }))
    </div>
</div>
