@model DPLK.Models.JobLvlType

@{
    ViewData["Title"] = "DPLK | Perta Life";
    Layout = "~/Views/Shared/DPLK_Layout.cshtml";
}

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Pension /</span> Create New Job Level Type</h4>

    <form asp-action="ParameterMakerJobLevelTypeCreate" method="post">
        <div class="form-group">
            <label for="JobLvlNmbr">ID:</label>
            <input type="number" class="form-control" id="JobLvlNmbr" name="JobLvlNmbr" required>
        </div>
        <div class="form-group">
            <label for="JobLvlNm">Desciption :</label>
            <input type="text" class="form-control" id="JobLvlNm" name="JobLvlNm" required>
        </div>
        <div class="form-group">
            <label for="OldTypeNmbr">Old Type Number:</label>
            <input type="text" class="form-control" id="OldTypeNmbr" name="OldTypeNmbr">
        </div>
        <div class="form-group">
            <label for="LastChangeDt">Last Change Date:</label>
            <input type="datetime-local" class="form-control" id="LastChangeDt" name="LastChangeDt">
        </div>
        <button type="submit" class="btn btn-primary">Create</button>
        <a asp-action="ParameterMakerJobLevelType" class="btn btn-secondary">Back to List</a>
    </form>
</div>
