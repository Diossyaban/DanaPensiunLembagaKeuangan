@model DPLK.Models.Paycenter

@{
    ViewData["Title"] = "DPLK | Perta Life";
    Layout = "~/Views/Shared/DPLK_Layout.cshtml";
}

<h4 class="fw-bold py-3 mb-4">
    <span class="text-muted fw-light">Pension /</span> New Business - Pay Center
</h4>

@if (!string.IsNullOrEmpty(TempData["SuccessMessage"] as string))
{
    <div class="alert alert-success" role="alert">
        @TempData["SuccessMessage"]
    </div>
}

<div class="card mb-4">
    <div class="card-body">

        <form asp-action="NewBussinesPayLaterIndex" method="post">


       @*     <div class="mb-3 row">
                <label asp-for="PaycenterNmbr" class="col-md-2 col-form-label">Pay Center Number</label>
                <div class="col-md-4">
                    <input asp-for="PaycenterNmbr" class="form-control" id="paycenterNmbr" />
                    <span asp-validation-for="PaycenterNmbr" class="text-danger"></span>
                </div>
                
            </div>*@

            <div class="mb-3 row">
                <label asp-for="PaycenterNm" class="col-md-2 col-form-label">Pay Center Name</label>
                <div class="col-md-4">
                    <input asp-for="PaycenterNm" class="form-control" />
                    <span asp-validation-for="PaycenterNm" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-3 row">
                <label asp-for="ClientNmbr" class="col-md-2 col-form-label">Company Name</label>
                <div class="col-md-4">
                    <select asp-for="ClientNmbr" class="form-select" asp-items="ViewBag.CompanyList">
                        <option value="">Select a company...</option>
                    </select>
                    <span asp-validation-for="ClientNmbr" class="text-danger"></span>
                </div>
            </div>

    
            <div class="mb-3 row">
                <label asp-for="MasterPaycenterNmbr" class="col-md-2 col-form-label">Master PayCenter </label>
                <div class="col-md-4">
                    <select asp-for="MasterPaycenterNmbr" class="form-select" asp-items="ViewBag.masterPayList"></select>
                    <span asp-validation-for="MasterPaycenterNmbr" class="text-danger"></span>
                </div>


            </div>
            <div class="mb-3 row">
                <label asp-for="ContactPerson" class="col-md-2 col-form-label">Contact Person</label>
                <div class="col-md-4">
                    <input asp-for="ContactPerson" class="form-control" />
                    <span asp-validation-for="ContactPerson" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-3 row">
                <div class="col-md-4 offset-md-2">
                    <button type="submit" class="btn btn-primary">Save</button>

                </div>
            </div>
        </form>
    </div>
</div>



@{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}