@model DPLK.Models.SecType

@{
    ViewData["Title"] = "DPLK | Perta Life";
    Layout = "~/Views/Shared/DPLK_Layout.cshtml";
}

<div class="container-xxl flex-grow-1 container-p-y">


    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Pension /</span> Create New Address Type</h4>

    <form asp-action="ParameterMakerAddressTypeCreate" method="post">
        <div class="form-group">
            <label for="SecTypeNmbr">ID:</label>
            <input type="text" class="form-control" id="AddrTypeNmbr" name="AddrTypeNmbr" required>
        </div>
        <div class="form-group">
            <label for="SecTypeNm">Description:</label>
            <input type="text" class="form-control" id="AddrTypeNm" name="AddrTypeNm" required>
        </div>
        <div class="form-group">
            <label for="OldTypeNmbr">Old ID:</label>
            <input type="text" class="form-control" id="OldTypeNmbr" name="OldTypeNmbr">
        </div>
        <div class="form-group">
            <label for="LastChangeDt">Last Change Date:</label>
            <input type="datetime-local" class="form-control" id="LastChangeDt" name="LastChangeDt">
        </div>
        <button type="submit" class="btn btn-primary">Create</button>
        <a asp-action="ParameterMakerAddressTypeIndex" class="btn btn-secondary">Back to List</a>
    </form>
</div>
