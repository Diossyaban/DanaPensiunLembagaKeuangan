*@
                </div>
                <div class="tab-pane fade" id="navs-pills-top-direction" role="tabpanel">
@*                    @await Html.PartialAsync("InvestmentDirection")
*@                </div>
                <div class="tab-pane fade" id="navs-pills-top-status" role="tabpanel">
@*                    @await Html.PartialAsync("BillingStatus")
*@
                </div>
                <div class="tab-pane fade" id="navs-pills-top-benefit" role="tabpanel">
@*                    @await Html.PartialAsync("BenefitGroup")
*@                </div>
                <div class="tab-pane fade" id="navs-pills-top-pic" role="tabpanel">
@*                    @await Html.PartialAsync("GroupPic")
*@
                </div>

            </div>
        </div>
    </div>

</div>



