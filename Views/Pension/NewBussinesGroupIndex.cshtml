@model DPLK.Models.GroupInfo

@{
    ViewData["Title"] = "DPLK | Perta Life";
    Layout = "~/Views/Shared/DPLK_Layout.cshtml";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light"> Pension / </span> New Business - Group Info</h4>
<div class="row">
    <div class="container-xxl flex-grow-1 container-p-y">
        <div class="nav-align-top mb-4">
            <ul class="nav nav-pills mb-3" role="tablist">
                <li class="nav-item">
                    <button type="button"
                            class="nav-link active"
                            role="tab"
                            data-bs-toggle="tab"
                            data-bs-target="#navs-pills-top-home"
                            aria-controls="navs-pills-top-home"
                            aria-selected="true">
                        Group Info
                    </button>
                </li>
                <li class="nav-item">
                    <button type="button"
                            class="nav-link"
                            role="tab"
                            data-bs-toggle="tab"
                            data-bs-target="#navs-pills-top-profile"
                            aria-controls="navs-pills-top-profile"
                            aria-selected="false">
                        Member Class Plan
                    </button>
                </li>
                <li class="nav-item">
                    <button type="button"
                            class="nav-link"
                            role="tab"
                            data-bs-toggle="tab"
                            data-bs-target="#navs-pills-top-messages"
                            aria-controls="navs-pills-top-messages"
                            aria-selected="false">
                        Group Change
                    </button>
                </li>
                <li class="nav-item">
                    <button type="button"
                            class="nav-link"
                            role="tab"
                            data-bs-toggle="tab"
                            data-bs-target="#navs-pills-top-direction"
                            aria-controls="navs-pills-top-direction"
                            aria-selected="false">
                        Investment Direction
                    </button>
                </li>
                <li class="nav-item">
                    <button type="button"
                            class="nav-link"
                            role="tab"
                            data-bs-toggle="tab"
                            data-bs-target="#navs-pills-top-status"
                            aria-controls="navs-pills-top-status"
                            aria-selected="false">
                        Billing Status
                    </button>
                </li>
      
                <li class="nav-item">
                    <button type="button"
                            class="nav-link"
                            role="tab"
                            data-bs-toggle="tab"
                            data-bs-target="#navs-pills-top-benefit"
                            aria-controls="navs-pills-top-benefit"
                            aria-selected="false">
                        Benefit
                    </button>
                </li>

                <li class="nav-item">
                    <button type="button"
                            class="nav-link"
                            role="tab"
                            data-bs-toggle="tab"
                            data-bs-target="#navs-pills-top-pic"
                            aria-controls="navs-pills-top-pic"
                            aria-selected="false">
                        PIC
                    </button>
                </li>
            </ul>
            <div class="tab-content">
                <div class="tab-pane fade show active" id="navs-pills-top-home" role="tabpanel">
                  @* Group Info*@
                    <div class="card-body">
                        <form asp-action="NewBussinesGroupIndex">
                            <div class="mb-3 row">
                                <label asp-for="ClientNmbr" class="col-md-2 col-form-label">Company Name</label>
                                <div class="col-md-4">
                                    @Html.DropDownList("CompanyName", (IEnumerable<SelectListItem>)ViewData["DdlParamsCompany"], new { @class = "form-control" })
                                    <span asp-validation-for="ClientNmbr" class="text-danger"></span>
                                </div>

                            </div>
                            <div class="mb-3 row">
                                <label asp-for="GroupNmbr" class="col-md-2 col-form-label">Group Number</label>
                                <div class="col-md-2">
                                    <input asp-for="GroupNmbr" class="form-control" type="text" placeholder="NEW" id="html5-text-input" readonly />
                                </div>
                            </div>
                            <div class="mb-3 row">
                                <label asp-for="OldGrpNmbr" class="col-md-2 col-form-label"> Old Group Number</label>
                                <div class="col-md-2">
                                </div>
                            </div>

                            <div class="mb-3 row">
                                <label asp-for="ProductType" class="col-md-2 col-form-label">Product Type</label>
                                <div class="col-md-4">
                                    @Html.DropDownList("ProductType", (IEnumerable<SelectListItem>)ViewData["DdlParamsProductType"], new { @class = "form-control" })
                                    <span asp-validation-for="ProductType" class="text-danger"></span>
                                </div>

                            </div>
                            <div class="mb-3 row">
                                <label asp-for="AllowWithNmbr" class="col-md-2 col-form-label">Allow Withdrawal Type</label>
                                <div class="col-md-4">
                                    @Html.DropDownList("AllowWithType", (IEnumerable<SelectListItem>)ViewData["DdlParamsAllowWithType"], new { @class = "form-control" })
                                    <span asp-validation-for="AllowWithNmbr" class="text-danger"></span>

                                </div>
                            </div>
                            <div class="mb-3 row">
                                <label asp-for="WithSrcTypeNmbr" class="col-md-2 col-form-label">Withdrawal Source</label>
                                <div class="col-md-4">
                                    @Html.DropDownList("WithSourceType", (IEnumerable<SelectListItem>)ViewData["DdlParamsWithSourceType"], new { @class = "form-control" })
                                    <span asp-validation-for="WithSrcTypeNmbr" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="mb-3 row">
                                <label asp-for="VaCurrencyNmbr" class="col-md-2 col-form-label">Currency</label>
                                <div class="col-md-4">
                                    @Html.DropDownList("CurrencyType", (IEnumerable<SelectListItem>)ViewData["DdlParamsCurrencyType"], new { @class = "form-control" })
                                    <span asp-validation-for="VaCurrencyNmbr" class="text-danger"></span>

                                </div>
                                <label asp-for="NormalRetireAge" class="col-md-2 col-form-label">Normal Retire Age</label>
                                <div class="col-md-4">
                                    <div class="input-group">
                                        <input asp-for="NormalRetireAge" class="form-control" type="number" min="0" max="100" />
                                        <span class="input-group-text"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="mb-3 row">
                                <label asp-for="VaDplkNmbr" class="col-md-2 col-form-label">Operational Administrator</label>
                                <div class="col-md-4">
                                    @Html.DropDownList("Partner", (IEnumerable<SelectListItem>)ViewData["DdlParamsPartner"], new { @class = "form-control" })
                                    <span asp-validation-for="VaDplkNmbr" class="text-danger"></span>

                                </div>
                                <label asp-for="EarlyRetireAge" class="col-md-2 col-form-label">Early Retire Age</label>
                                <div class="col-md-4">
                                    <div class="input-group">
                                        <input asp-for="EarlyRetireAge" class="form-control" type="number" min="0" max="100" />
                                        <span class="input-group-text"></span>
                                    </div>
                                </div>

                            </div>

                            <div class="mb-3 row">
                                <label asp-for="MinAnnuityPrct" class="col-md-2 col-form-label">
                                    Minimum Annuity Percentage
                                </label>
                                <div class="col-md-4">
                                    <div class="input-group">
                                        <input asp-for="MinAnnuityPrct" class="form-control" type="number" min="0" max="100" />
                                        <span class="input-group-text"> % </span>
                                    </div>
                                </div>
                            </div>
                            <div class="mb-3 row">
                                <label asp-for="MinAnnuityAmt" class="col-md-2 col-form-label">Minimum Annuity Amount</label>
                                <div class="col-md-4">
                                    <div class="input-group">
                                        <input asp-for="MinAnnuityAmt" class="form-control" type="number" min="0" max="100" />
                                        <span class="input-group-text"></span>
                                    </div>
                                </div>
                                <label asp-for="EfctvDt" class="col-md-2 col-form-label">Effective Date</label>
                                <div class="col-md-4">
                                    <input asp-for="EfctvDt" class="form-control" />
                                </div>
                            </div>
                            <div class="mb-3 row">
                                <label asp-for="AnlMaxWithFreq" class="col-md-2 col-form-label"> Annual Max Withdrawal Frequency</label>
                                <div class="col-md-4">
                                    <div class="input-group">
                                        <input asp-for="AnlMaxWithFreq" class="form-control" type="number" min="0" max="100" />
                                        <span class="input-group-text"></span>
                                    </div>
                                </div>
                                <label asp-for="PremiumMtdType" class="col-md-2 col-form-label">Premium Method Type</label>
                                <div class="col-md-4">
                                    @Html.DropDownList("PreminumMethodType", (IEnumerable<SelectListItem>)ViewData["DdlParamsPremiumMethod"], new { @class = "form-control" })
                                    <span asp-validation-for="PremiumMtdType" class="text-danger"></span>

                                </div>
                            </div>

                            <div class="mb-3 row">
                                <label asp-for="MinWithAmt" class="col-md-2 col-form-label">Min Withdrawal Amount</label>
                                <div class="col-md-4">
                                    <div class="input-group">
                                        <input asp-for="MinWithAmt" class="form-control" type="number" min="0" max="100" />
                                        <span class="input-group-text"></span>
                                    </div>
                                </div>
                                <label asp-for="CommisionType" class="col-md-2 col-form-label">Commission Type</label>
                                <div class="col-md-4">
                                    @Html.DropDownList("CommidsionType", (IEnumerable<SelectListItem>)ViewData["DdlParamsCommissionType"], new { @class = "form-control" })
                                    <span asp-validation-for="CommisionType" class="text-danger"></span>

                                </div>
                            </div>
                            <div class="mb-3 row">
                                <label asp-for="MaxWithPrct" class="col-md-2 col-form-label">
                                    Max Withdrawal Percentage
                                </label>
                                <div class="col-md-4">
                                    <div class="input-group">
                                        <input asp-for="MaxWithPrct" class="form-control" type="number" min="0" max="100" />
                                        <span class="input-group-text"> % </span>
                                    </div>
                                </div>

                                <label asp-for="AgentNmbr" class="col-md-2 col-form-label">Agent Name</label>
                                <div class="col-md-4">
                                    @Html.DropDownList("AgentName", (IEnumerable<SelectListItem>)ViewData["DdlParamsAgentName"], new { @class = "form-control" })
                                    <span asp-validation-for="AgentNmbr" class="text-danger"></span>

                                </div>

                            </div>
                            <div class="mb-3 row">
                                <label asp-for="MinYrForWith" class="col-md-2 col-form-label">
                                    Min year for W/D after participation
                                </label>
                                <div class="col-md-4">
                                    <div class="input-group">
                                        <input asp-for="MinYrForWith" class="form-control" type="number" min="0" max="100" />
                                        <span class="input-group-text"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="mb-3 row">

                                <label asp-for="SupportUu1992" class="col-md-2 col-form-label">
                                    Support UU Benefit 1992
                                </label>
                                <div class="col-md-4">
                                    <select asp-for="SupportUu1992" class="form-select">
                                        <option value="1">Yes</option>
                                        <option value="0">No</option>
                                    </select>
                                    <span asp-validation-for="SupportUu1992" class="text-danger"></span>
                                </div>
                                <label asp-for="BackdatedEfctvDt" class="col-md-2 col-form-label">Backdated Effective</label>
                                <div class="col-md-4">
                                    <input asp-for="BackdatedEfctvDt" class="form-control" />
                                </div>

                               
                            </div>
                            <div class="mb-3 row">
                                <label asp-for="SpakRecvDt" class="col-md-2 col-form-label">
                                    SPAK Received Date
                                </label>
                                <div class="col-md-4">
                                    <input asp-for="SpakRecvDt" class="form-control" />
                                </div>
                                <label asp-for="AccbalFreqNmbr" class="col-md-2 col-form-label">
                                    Account Balance Report Frequency
                                </label>
                                <div class="col-md-4">
                                    @Html.DropDownList("FrequencyType", (IEnumerable<SelectListItem>)ViewData["DdlParamsFrequencyType"], new { @class = "form-control" })
                                    <span asp-validation-for="AccbalFreqNmbr" class="text-danger"></span>

                                </div>
                            </div>
                            <div class="mb-3 row">
                                <label asp-for="IndGrpCd" class="col-md-2 col-form-label">
                                    Group Type
                                </label>
                                <div class="col-md-4">
                                    <select asp-for="IndGrpCd" class="form-select">
                                        <option value="1">Organization</option>
                                        <option value="0">Individu</option>
                                    </select>
                                    <span asp-validation-for="IndGrpCd" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="mb-3 row">
                                <label asp-for="InclContribFlg" class="col-md-2 col-form-label">
                                    Fee include on Contribution
                                </label>
                                <div class="col-md-4">
                                    <select asp-for="InclContribFlg" class="form-select">
                                        <option value="1">Exclude</option>
                                        <option value="0">Include</option>
                                    </select>
                                    <span asp-validation-for="InclContribFlg" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="mb-3 row">
                                <label asp-for ="ClaimProcessDay" class="col-md-2 col-form-label">
                                    Claim Processed Day
                                </label>
                                <div class="col-md-4">
                                    <div class="input-group">
                                        <input asp-for="ClaimProcessDay" class="form-control" type="number" min="0" max="100" />
                                        <span class="input-group-text"> Day </span>
                                    </div>
                                </div>
                            </div>
                            <div class="mb-3 row">
                                <label asp-for="AffiliatedTo" class="col-md-2 col-form-label">
                                    Affiliated To
                                </label>
                                <div class="col-md-4">
                                    @Html.DropDownList("FrequencyType", (IEnumerable<SelectListItem>)ViewData["DdlParamsAffiliated"], new { @class = "form-control" })
                                    <span asp-validation-for="AffiliatedTo" class="text-danger"></span>

                                </div>
                            </div>
                            <div class="mb-3 row">
                                <div class="col-md-10 offset-md-2">
                                    <input type="submit" value="Create" class="btn btn-primary" />
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="tab-pane fade" id="navs-pills-top-profile" role="tabpanel">
@*                    @await Html.PartialAsync("MemberClassPlan")
