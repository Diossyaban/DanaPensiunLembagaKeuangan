@{
    ViewData["Title"] = "DPLK | Perta Life";
    Layout = "~/Views/Shared/DPLK_Layout.cshtml";
}
<h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light"> Accounting / </span> Create Jurnal</h4>

<div class="container-xxl flex-grow-1 container-p-y">
    <div class="card my-4">
        <div class="card-body">
            <form asp-controller="JurnalAcc" asp-action="InsertJurnalAcc" method="post">
                <div class="mb-3 row">
                    <label class="col-md-2 col-form-label">Trns ID </label>
                    <div class="col-md-4">
                        <input type="text" name="trnsId" class="form-control" />
                    </div>
                </div>
                <div class="mb-3 row">
                    <label class="col-md-2 col-form-label">Description</label>
                    <div class="col-md-4">
                        <input type="text" name="description" class="form-control" />
                    </div>
                </div>
                <div class="mb-3 row">
                    <label class="col-md-2 col-form-label">Date Jurnal</label>
                    <div class="col-md-4">
                        <input type="datetime-local" name="dateJurnal" class="form-control" />
                    </div>
                </div>
                <div class="mb-3 row">
                    <label class="col-md-2 col-form-label">Owner</label>
                    <div class="col-md-4">
                        <input type="text" name="owner" class="form-control" />
                    </div>
                </div>
                <div class="mb-3 row">
                    <label class="col-md-2 col-form-label">Type</label>
                    <div class="col-md-4">
                        <input type="number" name="type" class="form-control" />
                    </div>
                </div>
                <div class="mb-3 row">
                    <label class="col-md-2 col-form-label">Correction</label>
                    <div class="col-md-4">
                        <input type="number" name="correction" class="form-control" />
                    </div>
                </div>
                <button type="submit" class="btn btn-primary" style="background-color: #0073fe">Submit</button>
            </form>
        </div>
    </div>
</div>
<h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light"> </span> Debet</h4>

