@model X.PagedList.IPagedList<DPLK.ModelAcc.SpdJurnalTemp>
@using X.PagedList.Mvc.Core
@using X.PagedList.Web.Common;

<link href="~/css/PagedList.css" rel="stylesheet" type="text/css" />
@{
    ViewData["Title"] = "DPLK | Perta Life";
    Layout = "~/Views/Shared/DPLK_Layout.cshtml";
}
<h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Accounting /</span> Deleted Jurnal</h4>

<div class="container-fluid px-4">
    <div class="card my-4">

        <div class="card-header">
            <div class="col-md-6">
                <form asp-action="DeletedJurnal" method="get">
                    <div class="input-group mb-3">
                        <input type="text" name="searchString" class="form-control" placeholder="Search...">
                        <button class="btn btn-outline-secondary" type="submit">Search</button>
                    </div>
                </form>
            </div>
        </div>
        @using (Html.BeginForm("DeletedJurnal", "CashManagement", FormMethod.Get, new { @class = "form-horizontal" }))
        {
            <div class="card-body">
                <div class="mb-3 row">
                    <label class="col-md-2 col-form-label">Start Date:</label>
                    <div class="col-md-2">
                        <input type="date" name="startDate" class="form-control" value="@ViewBag.StartDate" />
                    </div>
                    <label class="col-md-2 col-form-label">End Date:</label>
                    <div class="col-md-2">
                        <input type="date" name="endDate" class="form-control" value="@ViewBag.EndDate" />
                    </div>
                </div>
                <div class="mb-3 row">
                    <div class="col-md-6">
                        <button type="submit" class="btn btn-primary">Filter</button>
                    </div>
                </div>
            </div>
        }


        <div class="card-body">
            <div class="table-responsive text-nowrap">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th></th>
                            <th>Jurnal ID </th>
                            <th>Jurnal Date</th>
                            <th>Description</th>
                            <th>Fund</th>
                            <th>Correction</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>

                                    <div class="dropdown">
                                        <button type="button"
                                                class="btn p-0 dropdown-toggle hide-arrow"
                                                data-bs-toggle="dropdown">
                                            <i class="bx bx-dots-vertical-rounded"></i>
                                        </button>
                                        <div class="dropdown-menu">
                                            <a class="dropdown-item" asp-action="" asp-route-id="@item."><i class="bx bx-edit-alt me-1"></i>Edit</a>
                                            <a class="dropdown-item" asp-action="" asp-route-id="@item."><i class="bx bx-trash me-1"></i>Delete</a>
                                        </div>
                                    </div>

                                </td>
                                <td>@item.TrnsId</td>
                                <td>@item.DateJurnal.ToShortDateString()</td>
                                <td>@item.Description</td>
                                <td>@item.Credit</td>

                                <td>
                                    @if (item.Correction.HasValue)
                                    {
                                        if (item.Correction == false)
                                        {
                                            <span class="badge bg-label-secondary me-1 hover">Not Specified</span>
                                        }
                                        else if (item.Correction == true)
                                        {
                                            <span class="badge bg-label-success me-1 hover"> Correction</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-label-warning me-1 hover">Undefined</span>
                                        }
                                    }
                                    else
                                    {
                                        <span class="badge bg-label-secondary me-1 hover">Not Specified</span>
                                    }
                                </td>


                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<div class="text-center mt-4">
    Page @(Model.PageNumber) of @Model.PageCount
    @Html.PagedListPager(Model, page => Url.Action("DeletedJurnal", new { page, currentFilter = ViewBag.CurrentFilter }), PagedListRenderOptions.TwitterBootstrapPager)
</div>
